<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>">

  <label for="category"><b>Category</b></label>
  <input type="text" placeholder="Category" name="category" value="<%= data.category %>">
  <label for="image"><b>Image</b></label>
  
  <input type="file" name="image" id="image" accept="image/*">
  <br>
  <br>
  
  <!-- Display the existing image if it exists -->
  <img src="/uploads/<%= data.image %>" alt="<%= data.title %>" id="image-preview">
  <!-- Add an input for tracking changes in the file input -->
  <input type="hidden" id="image-changed" name="image-changed" value="false">
  <br>
  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>

  <input type="submit" value="Update" class="btn">

</form>