<div class="author">
    <h1 class="author__heading">Hi, I am Felipe.</h1>
    <p class="author__body">This is my blog where i write my studies and some routine life.</p>
  </div>

  <section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
  <br>
    <ul class="article-ul">
      <% data.forEach(post => { %>
        <li>
          <a href="/post/<%= post._id %>">
            <span><%= post.title %></span>
            <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
          </a>
        </li>
      <% }) %>
    </ul>
  
  
    <% if (nextPage !== null) { %>
      <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
   
  
    
  
  
  
  </section>